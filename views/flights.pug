html
  head
    title Airlines Reservation system
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js')
    script(src='https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js', type='text/javascript')
    script(src='./app/flights.js', type='text/javascript')
    link(href='https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css', rel='stylesheet', type='text/css')
  body
    .container
      div
        .text-center
          h2 Flights information
      table.table
       tr
        tr
         td
          div.form-group
           lable="Search By From"
           input.form-control(id='from', type='text')
         td
          div.form-group
           lable="Search By Destination"
           input.form-control(id='from', type='text')
         td
          div.form-group
           lable="Search By Flight"
           input.form-control(id='flight', type='text')      
         td
          div.form-group
           lable="Search By Date"
           input.form-control(id='datepicker', type='text')            
           script(type='text/javascript')
            |$('#datepicker').datepicker({uiLibrary: 'bootstrap4'});
      table.table.table-striped
        thead
          tr
            th Flight Name
            th From
            th Destination
            th Departure
            th Arrival 
            th Departure Time
            th ArrivalTime
            th Class
            th Price
        tbody
         each flight in flights
          tr(id="flight-"+flight.flightNo, class="open-form")
           td(id='airline')=flight.airline
           td(id='departure')=flight.depCity
           td(id='arrival')=flight.ariveCity          
           td(id='departureDate')=flight.depDate
           td(id='arrivalDate')=flight.ariveDate
           td(id='departureTime')=flight.depTime
           td(id='arrivalTime')=flight.ariveTime
           td
            div.form-group
             select.form-control.form-control-sm(id='clazz')
              option(value=flight.firstSeatsFare)=flight.firstSeats
              option(value=flight.businessSeatFare)=flight.businessSeat
           td
            span="Economic :"+flight.firstSeatsFare 
             br                      
            span="Business :"+flight.businessSeatFare                         